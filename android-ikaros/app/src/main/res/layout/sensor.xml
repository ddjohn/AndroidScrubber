<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/sensorGravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/sensorAccelerometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sensorGravity"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/sensorRotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sensorAccelerometer"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/sensorSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sensorRotation"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <Spinner
        android:id="@+id/sensorSensors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sensorSteps"
        android:layout_alignParentStart="true" />

</RelativeLayout>